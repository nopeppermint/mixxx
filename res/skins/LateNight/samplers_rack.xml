<Template>

  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Connection>
      <ConfigKey>[Samplers],show_samplers</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
    <Children>

      <WidgetGroup>
      <Layout>horizontal</Layout>
        <Children>
          <!-- Select between 1-4 big or orthers -->
          <WidgetStack currentpage="[Master],show_4sampler">
            <Children>

             <!-- Select between 5-8 big or 8 tiny -->
                  <WidgetStack currentpage="[Samplers],show_big">
                    <Children>
                      <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:samplers_unit_1-8_big.xml"/>
                        </Children>
                      </WidgetGroup>

                      <!--8 tiny Sampler -->
                      <WidgetGroup trigger="[Samplers],show_big5678_big_of_8" on_hide_select="0">
                      <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:samplers_unit_1-8.xml"/>
                        </Children>
                      </WidgetGroup>
                      <!--/8 Sampler -->
                    </Children>
                  </WidgetStack>
                  <!-- /Select between 5-8 big or all small -->

              <!--8 Sampler -->
              <WidgetGroup trigger="[Master],show_4sampler" on_hide_select="1">
              <Layout>horizontal</Layout>
                <Children>
                  <WidgetGroup>
                    <Layout>horizontal</Layout>
                    <Children>
                      <Template src="skin:samplers_unit_1234.xml"/>
                    </Children>
                  </WidgetGroup>
                </Children>
              </WidgetGroup>
            </Children>
          </WidgetStack>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
      <Size>5f,1min</Size>
          <Connection>
            <ConfigKey>[Master],skin_settings</ConfigKey>
            <BindProperty>visible</BindProperty>
          </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
