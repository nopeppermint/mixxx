<Template>

  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Connection>
      <ConfigKey>[Samplers],show_samplers</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
    <Children>

      <WidgetGroup>
      <Layout>horizontal</Layout>
        <Children>
          <!-- Select between 1-4 big or orthers -->
          <WidgetStack currentpage="[Skin],8_samplers">
            <Children>

              <WidgetGroup>
                <Layout>horizontal</Layout>
                <Children>
                  <Template src="skin:samplers_unit_1234.xml"/>
                </Children>
              </WidgetGroup>

              <!--8 Sampler -->
              <WidgetGroup trigger="[Skin],8_samplers" on_hide_select="0">
              <Layout>horizontal</Layout>
                <Children>
                  <!-- Select between big or small samplers -->
                  <WidgetStack currentpage="[Skin],expand_samplers">
                    <Children>
                      <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:samplers_unit_1-8_big.xml"/>
                        </Children>
                      </WidgetGroup>

                      <!--8 tiny Sampler -->
                      <WidgetGroup trigger="[Skin],expand_samplers" on_hide_select="0">
                      <Layout>horizontal</Layout>
                        <Children>
                          <Template src="skin:samplers_unit_1-8.xml"/>
                        </Children>
                      </WidgetGroup>
                      <!--/8 Sampler -->
                    </Children>
                  </WidgetStack>
                  <!-- / Select between big or small samplers -->
                </Children>
              </WidgetGroup>
            </Children>
          </WidgetStack>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
      <Size>5f,1min</Size>
          <Connection>
            <ConfigKey>[Master],skin_settings</ConfigKey>
            <BindProperty>visible</BindProperty>
          </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
