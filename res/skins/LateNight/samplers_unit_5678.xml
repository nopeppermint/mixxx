<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Children>

      <Template src="skin:samplersmall.xml">
        <SetVariable name="samplernum">5</SetVariable>
      </Template>

      <WidgetGroup><Size>10f,1min</Size></WidgetGroup>

      <Template src="skin:samplersmall.xml">
        <SetVariable name="samplernum">6</SetVariable>
      </Template>

      <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

      <PushButton>
        <ObjectName>Samplerexpandbutton</ObjectName>
        <Size>min,min</Size>
        <NumberStates>2</NumberStates>
        <State>
          <Number>0</Number>
          <Pressed>skin:/buttons/btn_samplerExpand.svg</Pressed>
          <Unpressed>skin:/buttons/btn_samplerExpand.svg</Unpressed>
        </State>
        <State>
          <Number>1</Number>
          <Pressed>skin:/buttons/btn_samplerCollapse.svg</Pressed>
          <Unpressed>skin:/buttons/btn_samplerCollapse.svg</Unpressed>
        </State>
        <Connection>
          <ConfigKey>[Samplers],show_big5678</ConfigKey>
          <ButtonState>LeftButton</ButtonState>
        </Connection>
      </PushButton>

      <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

      <Template src="skin:samplersmall.xml">
        <SetVariable name="samplernum">7</SetVariable>
      </Template>

      <WidgetGroup><Size>10f,1min</Size></WidgetGroup>

      <Template src="skin:samplersmall.xml">
        <SetVariable name="samplernum">8</SetVariable>
      </Template>

      <WidgetGroup>
        <Size>5f,1min</Size>
        <Connection>
          <ConfigKey>[Master],skin_settings</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
    <Connection>
      <ConfigKey persist="true">[Master],show_8sampler</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
</Template>
