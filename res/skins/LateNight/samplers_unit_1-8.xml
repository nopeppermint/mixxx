<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Children>

      <WidgetGroup>
		    <Layout>horizontal</Layout>
		    <Children>

	        <Template src="skin:samplersmall.xml">
	          <SetVariable name="samplernum">1</SetVariable>
	        </Template>

	        <WidgetGroup><Size>4f,1min</Size></WidgetGroup>

	        <Template src="skin:samplersmall.xml">
	          <SetVariable name="samplernum">2</SetVariable>
	        </Template>

	        <WidgetGroup><Size>4f,1min</Size></WidgetGroup>

	        <Template src="skin:samplersmall.xml">
	          <SetVariable name="samplernum">3</SetVariable>
	        </Template>

	        <WidgetGroup><Size>4f,1min</Size></WidgetGroup>

	        <Template src="skin:samplersmall.xml">
	          <SetVariable name="samplernum">4</SetVariable>
	        </Template>

          <WidgetGroup><Size>8f,1min</Size></WidgetGroup>

          <PushButton>
            <TooltipId>show_samplers</TooltipId>
            <ObjectName>Samplerexpandbutton</ObjectName>
            <Size>min,min</Size>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Pressed>skin:/buttons/btn_samplerCollapse.svg</Pressed>
              <Unpressed>skin:/buttons/btn_samplerCollapse.svg</Unpressed>
            </State>
            <State>
              <Number>1</Number>
              <Pressed>skin:/buttons/btn_samplerExpand.svg</Pressed>
              <Unpressed>skin:/buttons/btn_samplerExpand.svg</Unpressed>
            </State>
            <Connection>
              <ConfigKey>[Skin],expand_samplers</ConfigKey>
              <ButtonState>LeftButton</ButtonState>
            </Connection>
          </PushButton>

          <WidgetGroup><Size>8f,1min</Size></WidgetGroup>

          <Template src="skin:samplersmall.xml">
            <SetVariable name="samplernum">5</SetVariable>
          </Template>

          <WidgetGroup><Size>4f,1min</Size></WidgetGroup>

          <Template src="skin:samplersmall.xml">
            <SetVariable name="samplernum">6</SetVariable>
          </Template>

          <WidgetGroup><Size>4f,1min</Size></WidgetGroup>

          <Template src="skin:samplersmall.xml">
            <SetVariable name="samplernum">7</SetVariable>
          </Template>

          <WidgetGroup><Size>4f,1min</Size></WidgetGroup>

          <Template src="skin:samplersmall.xml">
            <SetVariable name="samplernum">8</SetVariable>
          </Template>

        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
