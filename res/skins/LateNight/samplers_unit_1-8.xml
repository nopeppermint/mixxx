<Template>
  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Children>

		  <WidgetGroup>
		  <Layout>horizontal</Layout>
		    <Children>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">1</SetVariable>
		    </Template>

		    <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">2</SetVariable>
		    </Template>

		    <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">3</SetVariable>
		    </Template>

		    <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">4</SetVariable>
		    </Template>

		    </Children>
		  </WidgetGroup>

      <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

      <!-- Don't know why, but this button has to be inverted..-->
			<PushButton>
				<TooltipId>show_samplers</TooltipId>
				<ObjectName>Samplerexpandbutton</ObjectName>
				<Size>min,min</Size>
				<NumberStates>2</NumberStates>
				<State>
					<Number>1</Number>
					<Pressed>skin:/buttons/btn_samplerExpand.svg</Pressed>
					<Unpressed>skin:/buttons/btn_samplerExpand.svg</Unpressed>
				</State>
				<State>
					<Number>0</Number>
					<Pressed>skin:/buttons/btn_samplerCollapse.svg</Pressed>
					<Unpressed>skin:/buttons/btn_samplerCollapse.svg</Unpressed>
				</State>
				<Connection>
					<ConfigKey>[Samplers],show_big1234</ConfigKey>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
			</PushButton>

      <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

		  <WidgetGroup>
		  <Layout>horizontal</Layout>
		    <Children>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">5</SetVariable>
		    </Template>

		    <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">6</SetVariable>
		    </Template>

		    <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">7</SetVariable>
		    </Template>

		    <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

		    <Template src="skin:samplerstiny.xml">
		      <SetVariable name="samplernum">8</SetVariable>
		    </Template>

		    </Children>
		  </WidgetGroup>

      <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

      <!-- Don't know why, but this button has to be inverted..-->
			<PushButton>
				<TooltipId>show_samplers</TooltipId>
				<ObjectName>Samplerexpandbutton</ObjectName>
				<Size>min,min</Size>
				<NumberStates>2</NumberStates>
				<State>
					<Number>1</Number>
					<Pressed>skin:/buttons/btn_samplerExpand.svg</Pressed>
					<Unpressed>skin:/buttons/btn_samplerExpand.svg</Unpressed>
				</State>
				<State>
					<Number>0</Number>
					<Pressed>skin:/buttons/btn_samplerCollapse.svg</Pressed>
					<Unpressed>skin:/buttons/btn_samplerCollapse.svg</Unpressed>
				</State>
				<Connection>
					<ConfigKey>[Samplers],show_big5678</ConfigKey>
					<ButtonState>LeftButton</ButtonState>
				</Connection>
			</PushButton>

      <WidgetGroup><Size>2f,1min</Size></WidgetGroup>

      <WidgetGroup>
        <Size>5f,1min</Size>
        <Connection>
          <ConfigKey>[Master],skin_settings</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
